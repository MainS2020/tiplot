{
  "name": "tiplot",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "proxy": "http://localhost:5000",
  "author": "Hamza <hamza@tilak.io> tilak.io",
  "main": "public/electron.js",
  "build": {
    "appId": "io.tilak.tiplot",
    "extraResources": [
      {
        "from": "./backend/",
        "to": "api",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "plotly.js": "^2.14.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.4.1",
    "react-scripts": "5.0.1",
    "react-select": "^5.4.0",
    "react-split-pane": "^0.1.92",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:api": "cd api && python3 server.py",
    "build:api": "node package_python.js",
    "serve:electron": "concurrently -k \"yarn api:start \" \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "build:electron": "yarn build && electron-builder",
    "start:electron": "wait-on tcp:3000 && electron .",
    "clean": "rm -rf dist/ server.spec main.spec build/ backend"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3",
    "wait-on": "^6.0.1"
  }
}
